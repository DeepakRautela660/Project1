@*@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers*@
@model LicenseModuleLogin.Models.Product

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@{
    ViewData["Title"] = "Home Page";
}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="~/Scripts/Modal.js"></script> @*/* Bootstrap Modal JS File*/*@
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        $(function () {
            $("#divData").empty().html('@ViewBag.Message');

            });
    </script>
}

<label>Select Product Name</label><br />
<form class="form-inline">
    <div class="form-group mb-2">
        <label class="sr-only">Select Product Name</label>
        @Html.DropDownList("P_ID", new SelectList(ViewBag.Products, "P_ID", "ProductName"), "Please select", new { @id = "P_ID", @ProductName = "ProductName", @class = "form-control" })
    </div>
    <button style="margin-left: 4px; border-radius: 5px;" type="button" id="modalBtn" class="btn btn-primary mb-2" data-toggle="modal" data-target="#exampleModal">Submit</button>
</form>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr id="tableHeadings">
              
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Generate Licence</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>